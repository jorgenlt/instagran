<div class="login-container", style="margin-right: 100px; margin-left: 100px; padding: 150px">
  <div class="login-header", style="margin-bottom: 40px"><h2>Log in</h2></div>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
    data: {turbo: false}) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions", style="margin-top: 10px">
        <%= f.button :submit, "Lets go" %>
      </div>
    <% end %>

  <div class="login-links", style="margin-top: 30px">
    <%= render "devise/shared/links" %>
    </div>
</div>
