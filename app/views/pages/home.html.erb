<div class="banner" style="background-image: url('https://media.istockphoto.com/id/1366983105/photo/portrait-of-funny-senior-blonde-woman-in-sun-glasses-and-pink-sweater-on-white-background.jpg?s=612x612&w=0&k=20&c=j9IzY2eBsQ0m6Z7H_C7Pe4Payi2L6OHRRSBRON6krTc=');">
  <div class="container">
    <h1>Welcome to</h1>
    <h1><em>insta</em>GRAN</h1>
    <div class="banner-buttons d-flex flex-column" data-controller="navbar"
  data-action="scroll@window->navbar#updateNavbar">
      <%= link_to "Find a grandma", grandmas_path, class: "banner-button-primary d-flex justify-content-center align-items-center mt-3 border border-2 border-primary"%>
      <%= link_to "Create profile", new_user_registration_path, class: "banner-button-secondary d-flex justify-content-center align-items-center mt-2 border border-2 border-primary" %>
    </div>
  </div>
</div>

<div class="container">
  <div class="d-flex home_cards">
    <% @grandmas.each do |grandma| %>
      <div class="main-card" id="main-card-home">
        <%= link_to grandma_path(grandma), class:"link-wrapper" do  %>
          <div class="pic-size">
            <%= cl_image_tag grandma.photo_url[0].key %>
          </div>
          <div class="card-text">
            <h2><%= "#{grandma.first_name} #{grandma.last_name} "%></h2>
            <% if grandma.description.length > 30 %>
              <p><%= "#{grandma.description[0, 50]}..."%></p>
            <% else %>
              <p><%= grandma.description %></p>
            <% end %>
          </div>
        <% end %>
      </div>
		<% end %>
  </div>
</div>
